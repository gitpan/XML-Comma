  <name>_test_multi_first</name>

  <element><name>foo</name></element>
  <element><name>bar</name></element>

  <store>
    <name>one</name>
    <base>test/multi_first_one</base>
    <location>Sequential_file:'max',100,'extension','.multi_first'</location>
    <index_on_store>one</index_on_store>
    <index_on_store>all</index_on_store>
  </store>

  <store>
    <name>two</name>
    <base>test/multi_first_two</base>
    <location>Sequential_file:'max',100,'extension','.multi_first'</location>
    <index_on_store>two</index_on_store>
    <index_on_store>all</index_on_store>
  </store>

  <index>
    <name>one</name>
    <field><name>foo</name></field>
  </index>

  <index>
    <name>two</name>
    <field><name>bar</name></field>
  </index>

  <index>
    <name>all</name>
    <store> qw(one *) </store>
    <doctype> '*', '_test_multi_second' </doctype>
    <field><name>foo</name></field>
    <field><name>bar</name></field>
    <field><name>doc_key</name></field>
    <default_order_by>doc_key</default_order_by>
  </index>

